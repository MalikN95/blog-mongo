{{> navbar}}

<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-image">
                    {{#if post.titleImg}}
                    <img src="/{{post.titleImg}}">
                    {{else}}
                    <img src="/img/defaul.jpg">
                    {{/if}}
                    <span class="card-title">{{post.title}}</span>
                </div>
                <div class="card-content">
                    <h4>Автор: <span>{{post.user.login}}</span></h4>
                    <p>{{post.text}}</p>
                </div>
                <div class="card-action">
                </div>
            </div>
        </div>
    </div>
</div>