{{> navbar}}
<div class="auth">
    <div class="container">
        <div class="row">
            <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#test1">Вход</a></li>
                <li class="tab col s6"><a  href="#test2">Регистрация</a></li>
            </ul>
            </div>
            <div id="test1" class="col s6 offset-s3">
                <div class="row">
                    <form action="/auth/login" method="post" class="auth-form col s12">
                        <div class="row">
                            <div class="input-field col s12">
                            <input name="login" id="last_name" type="text" class="validate" required>
                            <label for="last_name">Введите Логин</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                            <input name="password" id="password" type="password" class="validate" required>
                            <label for="password">Пароль</label>
                            </div>
                        </div>
                        <button class="btn waves-effect waves-light" type="submit" >Вход</button>
                    </form>
                </div>
            </div>
            <div id="test2" class=" col s6 offset-s3">
                <div class="row">
                    <form action="/auth/register" method="post" class="auth-form col s12">
                        <div class="row">
                            <div class="input-field col s6">
                            <input name="name" id="first_name" type="text" class="validate" required>
                            <label for="first_name">Имя</label>
                            </div>
                            <div class="input-field col s6">
                            <input name="login" id="last_name" type="text" class="validate" required>
                            <label for="last_name">Придумайте Логин</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                            <input name="password" id="password" type="password" class="validate" required>
                            <label for="password">Пароль</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                            <input id="password" type="password" class="validate" required>
                            <label for="password">Подтвердите пароль</label>
                            </div>
                        </div>
                            <button class="btn waves-effect waves-light" type="submit">Регистрация</button>
                    </form>
                </div>
            </div>
        </div>
  </div>
</div>